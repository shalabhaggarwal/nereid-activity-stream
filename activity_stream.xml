<?xml version="1.0" encoding="UTF-8"?>
<tryton>
    <data>
        
        <record model="ir.ui.view" id="graduit_nereid_user_activity_view_form">
            <field name="model">nereid.user</field>
            <field name="inherit" ref="nereid.nereid_user_form2"/>
            <field name="arch" type="xml">
                <![CDATA[
                  <data>
                    <xpath expr="//page[@id=&quot;permissions&quot;]" position="after">
                        <page string="Activity Stream" id="activity">
                            <field name="activity_stream"/>
                        </page>
                   </xpath>                      
                 </data>
               ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="nereid_activity_stream_view_form">
            <field name="model">activity.stream</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Activity Stream">
                    <label name="actor"/>
                    <field name="actor"/>
                    <label name="verb"/>
                    <field name="verb"/>
                    <label name="object"/>
                    <field name="object"/>
                    <label name="target"/>
                    <field name="target"/>
                    <label name="create_date"/>
                    <field name="create_date"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="nereid_activity_stream_tree">
            <field name="model">activity.stream</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Activity Stream">
                    <field name="nereid_user"/>
                    <field name="actor"/>
                    <field name="verb"/>
                    <field name="object"/>
                    <field name="target"/>
                    <field name="create_date"/>
                </tree>
                ]]>
            </field>
        </record>
                   
        <record model="ir.ui.view" id="nereid_activity_stream_object_tree">
            <field name="model">activity.stream.object</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Activity Stream Object">
                    <field name="name"/>
                    <field name="model"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="nereid_activity_stream_object_view_form">
            <field name="model">activity.stream.object</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Activity Stream Object">
                    <label name="name"/>
                    <field name="name"/>
                    <label name="model"/>
                    <field name="model"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.action.act_window"
                id="act_nereid_activity_stream_object_view_form">
            <field name="name">Activity Stream Object</field>
            <field name="res_model">activity.stream.object</field>
        </record>

        <record model="ir.action.act_window.view"
                id="act_nereid_activity_stream_object_view_form1">
            <field name="sequence" eval="2"/>
            <field name="view" ref="nereid_activity_stream_object_view_form"/>
            <field name="act_window" ref="act_nereid_activity_stream_object_view_form"/>
        </record>

        <record model="ir.action.act_window.view"
                id="act_nereid_activity_stream_object_view_form2">
            <field name="sequence" eval="1"/>
            <field name="view" ref="nereid_activity_stream_object_tree"/>
            <field name="act_window" ref="act_nereid_activity_stream_object_view_form"/>
        </record>

        <menuitem name="Activity Stream "
            parent="nereid.menu_nereid"
            id="menu_nereid_activity_stream_object"
            sequence="120"/>

        <menuitem parent="menu_nereid_activity_stream_object"
            action="act_nereid_activity_stream_object_view_form"
            id="menu_nereid_activity_stream_object_list"
            sequence="20" icon="tryton-list"/>

        <record model="ir.ui.view" id="activity_stream_broadcast_start_view_form">
            <field name="model">activity.stream.broadcast.start</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Broadcast">
                  <group col="1" id="broadcast_id">
                    <label string="Broadcast a message to all the registered users of the system." id="broadcast" yalign="0.0" xalign="0.0" xexpand="1"/>
                    <newline/>
                    <label name="nereid_user" yalign="0.0" xalign="0.0"/>
                    <field name="nereid_user"/>
                    <separator colspan="4" name="message"/>
                    <field name="message"/>
                  </group>
                </form>
                ]]>
              </field>
        </record>

        <record model="ir.action.wizard" id="act_activity_stream_broadcast">
            <field name="name">Activity Stream Broadcast</field>
            <field name="wiz_name">activity.stream.broadcast</field>
        </record>

        <menuitem name="Activity Stream Broadcast" 
          parent="menu_nereid_activity_stream_object_list" 
          action="act_activity_stream_broadcast"
          id="menu_activity_stream_broadcast_list"/> 
            
    </data>
</tryton>
